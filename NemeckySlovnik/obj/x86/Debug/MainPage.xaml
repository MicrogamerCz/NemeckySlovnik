<Page
    x:Class="NemeckySlovnik.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NemeckySlovnik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Dark"
    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">

    <ScrollViewer>
        <StackPanel x:ConnectionId='2' Margin="50" Orientation="Vertical" Spacing="20" x:Name="mainPanel" x:FieldModifier="public">
            <AutoSuggestBox x:ConnectionId='3' Header="Vyhledat slovo (podpora vyhledání českého i německého)" x:Name="searchBox" x:FieldModifier="public"/>
            
            <StackPanel Orientation="Horizontal" Spacing="50">
                <TextBlock Text="Filtry:" VerticalAlignment="Center"/>
                <CheckBox x:ConnectionId='14' x:Name="nounCheckBox" Content="Podstatná jména"/>
                <CheckBox x:ConnectionId='15' x:Name="verbCheckBox"                              Content="Slovesa"/>
                <CheckBox x:ConnectionId='16' Visibility="Collapsed" x:Name="regVerbCheckBox" Content="Pravidelná slovesa"/>
                <CheckBox x:ConnectionId='17' Visibility="Collapsed" x:Name="irregVerbCheckBox" Content="Nepravidelná slovesa"/>
                <CheckBox x:ConnectionId='18' Visibility="Collapsed" x:Name="mixVerbCheckBox" Content="Smíšená slovesa"/>
            </StackPanel>
            
            <ListView x:ConnectionId='4' x:Name="wordList" x:FieldModifier="public">
                <ListView.ItemTemplate>
                    <DataTemplate                                >
                        <StackPanel x:ConnectionId='10' Padding="20" Orientation="Vertical" Spacing="20" Background="#242424" CornerRadius="7">
                            <TextBlock x:ConnectionId='11'                       />
                            <TextBlock x:ConnectionId='12'                       />
                            <TextBlock x:ConnectionId='13'                         />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Spacing="20" Orientation="Horizontal">
                <Button x:ConnectionId='5' x:Name="addWord"                        Content="Přidat slovo"/>
                <Button x:ConnectionId='6' x:Name="importIndex"  Content="Importovat index"/>
                <Button x:ConnectionId='7' x:Name="mergeIndex"  Content="Spojit index"/>
                <Button x:ConnectionId='8' x:Name="exportIndex" Content="Exportovat index"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

